<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/buttonBackground</item>
        <item name="iconTint">@color/white</item>
        <item name="android:paddingTop">@dimen/normalMargin</item>
        <item name="android:paddingBottom">@dimen/normalMargin</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/settingsScreenTitleTextSize</item>
        <item name="android:padding">@dimen/normalMargin</item>
    </style>

    <style name="DialogText">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">@dimen/dialogTextSize</item>
    </style>

    <style name="RadioButton">
        <item name="android:textSize">@dimen/radioButtonTextSize</item>
    </style>

    <style name="TimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:headerBackground">@color/accent</item>
        <item name="android:numbersBackgroundColor">@color/accent</item>
    </style>

</resources>